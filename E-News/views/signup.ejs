<%- include("header"); -%>

<div class="LoginPage">
  <div class="container">
    <form class="form-signin" method="POST" action="/signup">
      <h2 class="form-signin-heading">Create new Account</h2>
      <label for="username" class="sr-only">Username:</label>
      <input type="text" id="inputUsername" class="form-control" name="inputUsername" placeholder="Username" required="" autofocus="">
      <label for="status" class="sr-only">Status:</label>
      <select id="inputStatus" class="form-control" name="inputStatus" required="">
        <option value="Viewer">Viewer</option>
        <option value="Publisher">Publisher</option>
      </select>
      <label for="inputEmail" class="sr-only">Email address:</label>
      <input type="email" id="inputEmail" class="form-control" name="inputEmail" placeholder="Email address" required="">
      <label for="inputPassword" class="sr-only">Password:</label>
      <input type="password" id="inputPassword" class="form-control" name="inputPassword" placeholder="Password" required="">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      <p class="text">Have an account?
        <a href="login">Login</a></p>
    </form>
  </div> <!-- /container -->
</div>

<%- include("footer"); -%>
